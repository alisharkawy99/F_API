            <p>
                <span class="text "><%= temperature %> Â°C</span> 
                <span class="text " ><%= response %></span> 
                 <span><img  src="https://openweathermap.org/img/wn/<%= icon %>@2x.png" alt="icon" class="icons"></span>
             </p>
        </div>
        
        <% } else { %>
            <h1>Please Enter Your Country and City</h1>
        <%  }%>
   
    
    
